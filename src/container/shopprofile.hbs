<main class="p-5">
    <div class="row">
        <div class="col-12 ">
            <div class="card">
                <div class="card-body">
                    <div class="nav nav tabs">
                        {{#with navigation}}
                        {{#each links}}
                        <div class="nav-item">
                            <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                        </div>
                        {{/each}}
                        {{/with}}
                    </div>
                </div>
            </div>

        </div>
        <div class="mb-5">
            <h2 class="text-center text-header text-bg mb-5">{{header}}</h2>
        </div>
        <section class="mb-3">
            {{#with purchase}}
            <div class="col-12">
                <div class="nav nb-6">
                    {{#each tabs}}
                    <div class="nav nav-tabs my-2">
                        <div class="nav-item ">
                            <div class="nav-link {{#if @last class=" text-primary"}}primary{{/if}} {{#if @first
                                class="text-secondary" }}active {{/if}}">{{tabs}}{{this}}</div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div class="mb-5">
                    <hr>
                </div>
                {{#with actionBlock}}
                {{#with input}}
                <label class="form-label"><input class="form-control">
                    <span class="form-text text-secondary-center">{{placeholder}}</span>
                </label>
                <div class="alert alert-light">



                    {{#each buttons}}
                    <div>
                        {{#each this}}
                        <button class="btn btn-success">
                            {{#if isSuccess includeZero=true}} <a href=" {{link}}"
                                class="text-succeess btn btn-link">{{text}}</a>

                            {{/if}}
                        </button>
                        <button class="btn btn-success-outline">{{#if isOutline includeZero=true}}<a href="{{link}}"
                                class="text-light btn btn-link">
                                {{text}}</a>{{/if}}</button>
                        <button class="btn btn-danger-outline"> {{#if isDanger includeZero=true}}<a href="{{link}}"
                                class="text-light btn btn-link">{{text}}</a>{{/if}}</button>
                        {{/each}}
                    </div>
                    {{/each}}

                </div>


                {{/with}}
                {{/with}}
            </div>
            {{/with}}


        </section>

        <section class="mb-3">
            <div class="col-12">

            </div>
        </section>
    </div>
</main>